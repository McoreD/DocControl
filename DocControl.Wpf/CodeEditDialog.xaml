<Window x:Class="DocControl.Wpf.CodeEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Codes" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,10">
            <Run FontWeight="Bold">Edit Codes:</Run>
            <LineBreak/>
            Double-click a cell to edit. Add new codes using the form below. Delete codes by selecting a row and clicking Delete Selected.
            <LineBreak/>
            <Run FontWeight="SemiBold" Foreground="Red">Warning:</Run> Codes referenced by existing documents cannot be deleted.
        </TextBlock>

        <!-- DataGrid for editing codes -->
        <DataGrid Grid.Row="1" 
                  Name="dgCodes" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="#FFF0F0F0"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Add New Code Section -->
        <GroupBox Grid.Row="2" Header="Add New Code" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- First Row -->
                <Label Grid.Row="0" Grid.Column="0" Content="Level:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Name="cmbNewLevel" Margin="5">
                    <ComboBoxItem Content="1" IsSelected="True"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                </ComboBox>

                <Label Grid.Row="0" Grid.Column="2" Content="Code:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" Name="txtNewCode" Margin="5" VerticalAlignment="Center"/>

                <Label Grid.Row="0" Grid.Column="4" Content="Description:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="5" Name="txtNewDescription" Margin="5" VerticalAlignment="Center"/>

                <Button Grid.Row="0" Grid.Column="6" Name="btnAddCode" Content="Add Code" Padding="10,5" Margin="10,5,5,5" Click="btnAddCode_Click"/>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnDeleteSelected" Content="Delete Selected" Padding="10,5" Margin="0,0,10,0" Click="btnDeleteSelected_Click"/>
            <Button Name="btnSave" Content="Save Changes" Padding="10,5" Margin="0,0,10,0" Click="btnSave_Click" IsDefault="True"/>
            <Button Name="btnCancel" Content="Close" Padding="10,5" Click="btnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
